<h1>Turing Award Recipients</h1>

<table class="table table-hover table-borderedless">
    <thead>
        <tr class="table-primary" >
            <th scope="col">Name</th>
            <th scope="col">Year</th>
            <th scope="col">Rationale</th>
        </tr>
    </thead>
    <tbody>
        <% turing_award_recipients.each do |recipient| %>
            <tr>
                <td class="text-nowrap"><%= recipient.name %></td>
                <td><%= recipient.year %></td>
                <td><%= recipient.rationale %></td>
            </tr>
        <% end %>
    </tbody>
</table>
